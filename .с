//21. Составить программу, которая в зависимости от порядкового номера дня недели выводит его название и количество дней до воскресенья.
puts("Задание 3");
char x;
puts("Введите порядковый номер дня недели");
scanf_s("%c", &x);
switch (x)
{

case'1':
	printf("понедельник, 6 дней до воскресенья\n");
	break;
case '2':
	printf("вторник, 5 дней до воскресенья\n");
	break;
case '3':
	printf("среда, 4 дня до воскресенья\n");
case '4':
	printf("четверг, 3 дня до воскресенья\n");
	break;
case '5':
	printf("пятница, 2 дня до воскресенья\n");
	break;
case '6':
	printf("суббота, 1 день до воскресенья\n");
	break;
case '7':
	printf("воскресенье, 0 дней до воскресенья\n");
	break;
default:
	printf("Неверно введено выражение\n");

}
system("pause");
}
